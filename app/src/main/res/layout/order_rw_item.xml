<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <com.example.ld_street_lights_maintenance.view.FlowViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_read_alarm_threshold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/cd_electricity"
            android:background="@drawable/button_drawable"
            android:text="读取报警电压电流阈值"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/cd_electricity"
            android:background="@drawable/button_drawable"
            android:text="读取时间"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/cd_electricity"
            android:background="@drawable/button_drawable"
            android:text="读取电参"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/cd_electricity"
            android:background="@drawable/button_drawable"
            android:text="读设备ID号"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/cd_electricity"
            android:background="@drawable/button_drawable"
            android:text="读取设备当前版本号"
            android:textColor="@color/white"/>


    </com.example.ld_street_lights_maintenance.view.FlowViewGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_rw_write"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="写入"
            android:textSize="15sp" />

        <!-- ee00050001503516ef ee0005000164e217ef  -->

        <EditText
            android:id="@+id/et_rw_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bt_rw_write"
            android:digits="0123456789ABCDEFabcdef"
            android:gravity="center_vertical"
            android:hint="请输入HEX格式指令"
            android:inputType="text"
            android:text="ee0005000164e217ef"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fadeScrollbars="false"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textSize="13sp" />

</LinearLayout>